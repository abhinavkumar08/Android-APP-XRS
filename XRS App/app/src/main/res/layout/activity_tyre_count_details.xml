<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tyre_count_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xpedite.activity.count.TyreCountDetailsActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <EditText
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText_small_tyre_count"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_width="50dp"
                android:layout_alignBottom="@+id/textView_final_small"
                android:layout_toRightOf="@+id/textView_final_small"
                android:layout_toEndOf="@+id/textView_final_small"
                android:layout_marginBottom="15dp" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/bike"
                android:id="@+id/imageView_final_small"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Small Tyres(Approx.)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_final_small"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginTop="13dp"
                android:layout_below="@+id/imageView_final_small"
                android:layout_alignLeft="@+id/imageView_final_small"
                android:layout_alignStart="@+id/imageView_final_small" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_tyre_count_rate_display_small"
                android:layout_alignBaseline="@+id/editText_small_tyre_count"
                android:layout_alignBottom="@+id/editText_small_tyre_count"
                android:layout_toRightOf="@+id/editText_small_tyre_count"
                android:layout_toEndOf="@+id/editText_small_tyre_count" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Medium Tyres(Approx.)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_final_medium"
                android:layout_marginTop="14dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_below="@+id/imageView_final_medium"
                android:layout_alignLeft="@+id/imageView_final_medium"
                android:layout_alignStart="@+id/imageView_final_medium" />

            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText_med_tyre_count"
                android:layout_marginLeft="36dp"
                android:layout_marginStart="36dp"
                android:layout_marginBottom="15dp"
                android:layout_alignBottom="@+id/textView_final_medium"
                android:layout_toRightOf="@+id/textView_final_medium"
                android:layout_toEndOf="@+id/textView_final_medium" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/car"
                android:layout_marginLeft="29dp"
                android:layout_marginStart="29dp"
                android:id="@+id/imageView_final_medium"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_tyre_count_rate_display_med"
                android:layout_above="@+id/textView_final_medium"
                android:layout_toRightOf="@+id/editText_med_tyre_count"
                android:layout_toEndOf="@+id/editText_med_tyre_count" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Large Tyres( Approx.)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_final_large"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/imageView_final_large"
                android:layout_alignLeft="@+id/imageView_final_large"
                android:layout_alignStart="@+id/imageView_final_large" />

            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText_large_tyre_count"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="12dp"
                android:layout_alignBottom="@+id/textView_final_large"
                android:layout_toRightOf="@+id/textView_final_large"
                android:layout_toEndOf="@+id/textView_final_large"
                android:layout_marginStart="50dp" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/truck"
                android:layout_marginLeft="29dp"
                android:layout_marginStart="29dp"
                android:id="@+id/imageView_final_large"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_tyre_count_rate_display_large"
                android:layout_above="@+id/textView_final_large"
                android:layout_toRightOf="@+id/editText_large_tyre_count"
                android:layout_toEndOf="@+id/editText_large_tyre_count" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Select Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_choose_address"
                android:onClick="chooseAddress"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_marginTop="50dp" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>

    </ScrollView>